html
  margin 0
  padding 0

body
  margin 0
  padding 0
  font-family "Helvetica Neue", "Helvetica", sans-serif

#main
  width 100%
  height 100%

overlay
  position absolute
  top 0
  left 0
  width 100%
  z-index 1
  color #808088
  text-align center
  font-size 1.2em
  letter-spacing -0.045em
  background #fff
  opacity 0.7
  z-index 1
  padding .5em 0

  p
    margin 0

#overlay-message
  width 60%
  margin 0 20%
  position relative

#overlay-close
  position absolute
  top 0
  right .25em
  transform translateY(-50%)
  top 50%
  width 30px
  height 30px
  cursor pointer
  background-image url("../img/x-small.png")

screenshot
  position absolute
  width 40px
  height 40px
  right .25em
  bottom .25em
  
#screenshot-button
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #808

panel
  position absolute
  top 0
  left 0
  height 100%
  padding-right 2em
  line-height 1.75
  background-color #808088
  overflow scroll
  transition transform 0.25s ease

  &.closed
    transform translateX(-100%)

  ul
    padding 0

  li
    padding 0 0 0 1em
    list-style none


loading
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background rgba(255,255,255,0.4)
  text-align center
  display table
  z-index 10
  
  .cell
    display table-cell
    vertical-align middle
